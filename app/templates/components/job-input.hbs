{{text-input id='company' value=job.company placeholder='New Job Company' label='Company'}}
{{text-input id='title' value=job.title placeholder='New Job Title' label='Title'}}
{{text-input id='url' value=job.url placeholder='New Job URL' label='URL' }}
<div class="form-group row">
  <label for='kind' class="col-sm-2 col-form-label">Status</label>
  <div class="col-sm-10">
    <select class='form-control' onchange={{action (mut job.status) value='target.value'}} value=job.status>
      {{#each statusList as |status|}}
        <option value=status.value>{{status.text}}</option>
      {{/each}}
    </select>
  </div>
</div>

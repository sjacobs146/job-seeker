{{text-input id='recruiterName' value=job.recruiterName placeholder='Recruiter Name' label='Recruiter Name' }}
{{text-input id='recruiterEmail' placeholder='Recruiter Email' value=job.recruiterEmail label='Recruiter Email'}}
{{text-input id=RecruiterPhone placeholder='Recruiter Phone' value=job.recruiterPhone label='Recruiter Phone'}}
<div class="form-group row">
  <label for='kind' class="col-sm-2 col-form-label">Notes</label>
  <div class="col-sm-10">
    {{textarea class='form-control' cols=80 rows=6 placeholder='Notes' value=job.notes}}
  </div>
</div>
